{% extends "base.html.twig" %}

{% block activelogin %}class="activeheader"{% endblock %}

{% block content %}

  {# login #}

  {% if error != false %}
  <div class="alert danger" role="alert">
      {{ error }}
  </div>
  {% endif %}

  {% if success != false %}
  <div class="alert success" role="alert">
      {{ success }}
  </div>
  {% endif %}
<div class="aligncentre">
    <form action="login" method="post">
        <input name="username" type="text" autocomplete="off" placeholder="Username or email address" autofocus required/> <br/>
        <input name="password" type="password" autocomplete="off" placeholder="Password" required/> <br/>
        <button class="btn">Log In</button>
    </form>
</div>


{% endblock %}
